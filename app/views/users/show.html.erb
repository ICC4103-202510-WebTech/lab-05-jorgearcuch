<h1>User Info</h1>

<ul>
  <li><strong>ID:</strong> <%= @user.id %></li>
  <li><strong>Email:</strong> <%= @user.email %></li>
  <li><strong>First Name:</strong> <%= @user.first_name %></li>
  <li><strong>Last Name:</strong> <%= @user.last_name %></li>
  <li><strong>Created At:</strong> <%= @user.created_at %></li>
  <li><strong>Updated At:</strong> <%= @user.updated_at %></li>
</ul>

<h2>Chats Participated</h2>
<ul>
  <% @user.sent_chats.each do |chat| %>
    <li>To <%= chat.receiver.email %></li>
  <% end %>
  <% @user.received_chats.each do |chat| %>
    <li>From <%= chat.sender.email %></li>
  <% end %>
</ul>

<h2>Messages Sent</h2>
<ul>
  <% @user.sent_messages.each do |msg| %>
    <li>In Chat #<%= msg.chat_id %>: <%= msg.body %></li>
  <% end %>
</ul>

<%= link_to "Back to Users", users_path %>
<% if can? :edit, @user %>
  <%= link_to "Edit", edit_user_path(@user) %>
<% end %>


