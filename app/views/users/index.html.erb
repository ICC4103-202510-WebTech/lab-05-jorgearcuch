<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Users</h1>
    <%= link_to 'Add New User', new_user_path, class: 'btn btn-primary' %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Email</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Messages Sent</th>
          <th>Created At</th>
          <th>Updated At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.email %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.sent_messages.count %></td>
            <td><%= user.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            <td><%= user.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
            <td>
              <%= link_to "Show", user_path(user), class: "btn btn-sm btn-outline-primary me-1" %>
              <% if can? :edit, user %>
                <%= link_to "Edit", edit_user_path(user), class: "btn btn-sm btn-outline-secondary" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
