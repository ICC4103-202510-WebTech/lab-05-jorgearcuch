<h1>Users</h1>

<p><%= link_to 'Add New User', new_user_path %></p>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Email</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Messages Sent</th>
    <th>Created At</th>
    <th>Updated At</th>
    <th>Record</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.email %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.sent_messages.count %></td>
      <td><%= user.created_at %></td>
      <td><%= user.updated_at %></td>
      <td>
      <%= link_to "Show", user_path(user) %>
      <%= link_to "Edit", edit_user_path(user) %>
      </td>
    </tr>
  <% end %>
</table>
