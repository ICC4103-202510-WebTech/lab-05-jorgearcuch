<h1>Message Info</h1>

<ul>
  <li><strong>ID:</strong> <%= @message.id %></li>
  <li><strong>Chat ID:</strong> <%= @message.chat_id %></li>
  <li><strong>User name:</strong> <%= @message.user_id %></li>
  <li><strong>Body:</strong> <%= @message.body %></li>
  <li><strong>Created At:</strong> <%= @message.created_at %></li>
  <li><strong>Updated At:</strong> <%= @message.updated_at %></li>
</ul>
<p><strong>Message Body:</strong> <%= @message.body %></p>
<p><strong>Author:</strong> <%= @message.user.email %></p>
<p><strong>Chat ID:</strong> <%= link_to "View Chat", chat_path(@message.chat) %></p>

<%= link_to "Back to Messages", messages_path %>
<% if can? :edit, @message %>
        <%= link_to "Edit", edit_message_path(@message) %>
<% end %>

