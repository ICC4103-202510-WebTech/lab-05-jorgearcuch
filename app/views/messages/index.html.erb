<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Messages</h1>
    <%= link_to 'Send a new message', new_message_path, class: 'btn btn-primary' %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Chat ID</th>
          <th>User ID</th>
          <th>Body</th>
          <th>Created At</th>
          <th>Updated At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @messages.each do |message| %>
          <tr>
            <td><%= message.id %></td>
            <td><%= message.chat_id %></td>
            <td><%= message.user_id %></td>
            <td><%= truncate(message.body, length: 50) %></td>
            <td><%= message.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            <td><%= message.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
            <td>
              <%= link_to "Show", message_path(message), class: "btn btn-sm btn-outline-primary me-1" %>
              <% if can? :edit, message %>
                <%= link_to "Edit", edit_message_path(message), class: "btn btn-sm btn-outline-secondary" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
